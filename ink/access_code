    ~ entered_phrase = "The devastating"
+[Brutal]
    ~ entered_code = "3"
    ~ entered_phrase = "The brutal"
+[Unobtainable]
    ~ entered_code = "4"
    ~ entered_phrase = "The unobtainable"

- ->->


= code_2

+[Dominatrix]
    ~ entered_code += "0"
    ~ entered_phrase += " Dominatrix"
+[Mistress]
    ~ entered_code += "1"
    ~ entered_phrase += " Mistress"
+[Hellcat]
    ~ entered_code += "2"
    ~ entered_phrase += " Hellcat"
+[Goddess]
    ~ entered_code += "3"
    ~ entered_phrase += " Goddess"
+[Vixen]
    ~ entered_code += "4"
    ~ entered_phrase += " Vixen"

- ->->


