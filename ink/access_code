= code_4

+[naughty]
    ~ entered_code += "0"
    ~ entered_phrase += " her naughty"
+[dirty]
    ~ entered_code += "1"
    ~ entered_phrase += " her dirty"
+[worthless]
    ~ entered_code += "2"
    ~ entered_phrase += " her worthless"
